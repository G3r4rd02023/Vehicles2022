

@model Vehicles2022.Models.HistoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<h4>Historia</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddHistory" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleId" />

            <partial name="_History" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                </button>
                <a asp-action="DetailsVehicle" asp-route-id="@Model.VehicleId" class="btn btn-success"><i class=" fas fa-undo-alt"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}